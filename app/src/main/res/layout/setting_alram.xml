<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main_background">

        <ImageButton
            android:id="@+id/backbutton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@color/whiteTransparent"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="@dimen/TitleW"
            android:layout_height="@dimen/TitleH"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/murucmuruc"
            android:text="알림종류 설정"
            android:textSize="40sp" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Title"
        android:layout_margin="@dimen/margin_small"
        android:background="@drawable/layout_border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_border"
            android:padding="@dimen/margin_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/correct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/whitecat"
                android:text="자세교정 알림"
                android:textSize="40sp" />

            <Switch
                android:id="@+id/switchS1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:fontFamily="@font/whitecat"
                android:text="아침, 점심, 저녁 알림"
                android:textSize="30sp" />

            <Switch
                android:id="@+id/switchS2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:fontFamily="@font/whitecat"
                android:text="설정시간대별 알림"
                android:textSize="30sp" />

            <Switch
                android:id="@+id/switchS3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:fontFamily="@font/whitecat"
                android:text="알림창 팝업 여부"
                android:textSize="30sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_border"
            android:padding="@dimen/margin_small"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stretching"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/whitecat"
                android:text="스트레칭 알림"
                android:textSize="40sp" />

            <Switch
                android:id="@+id/switchC1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:fontFamily="@font/whitecat"
                android:text="아침, 점심, 저녁 알림"
                android:textSize="30sp" />

            <Switch
                android:id="@+id/switchC2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:fontFamily="@font/whitecat"
                android:text="설정시간대 알림"
                android:textSize="30sp" />

            <Switch
                android:id="@+id/switchC3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:fontFamily="@font/whitecat"
                android:text="알림창 팝업 여부"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>