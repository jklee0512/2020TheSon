<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/mListimg"
        android:layout_width="@dimen/mouseVW"
        android:layout_height="@dimen/mouseVH"
        android:src="@drawable/no_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mListname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/whitecat"
            android:text="logetech"
            android:textSize="20sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/mListW1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin_small"
                    android:fontFamily="@font/whitecat"
                    android:text="가로 : "
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/mListW2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:fontFamily="@font/whitecat"
                    android:text="9cm"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/mListH1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/whitecat"
                    android:text="세로 : "
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/mListH2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/whitecat"
                    android:text="15cm"
                    android:textSize="30sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/mListT1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="@dimen/margin_small"
                    android:fontFamily="@font/whitecat"
                    android:text="높이 : "
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/mListT2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginRight="@dimen/margin_medium"
                    android:fontFamily="@font/whitecat"
                    android:text="9cm"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/mListG1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/whitecat"
                    android:text="무게 : "
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/mListG2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:fontFamily="@font/whitecat"
                    android:text="15cm"
                    android:textSize="30sp" />
            </TableRow>

        </TableLayout>

    </LinearLayout>

</LinearLayout>